<% if policy(Species).create? %>
  <div class="float-right">
    <%= link_to 'Add', new_species_path, class: 'btn btn-primary', role: 'button' %>
  </div>
<% end %>

<h1>List of species</h1>

<ul class="mt-3">
  <% @species.each do |species| %>
    <li>
      <%= link_to species.name, species %>
      (<%= species.common_names %>)
    </li>
  <% end %>
</ul>
