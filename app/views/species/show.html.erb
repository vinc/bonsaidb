<% if policy(Species).update? %>
  <div class="float-right">
    <%= link_to 'Remove', @species, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger mr-2', role: 'button' %>
    <%= link_to 'Edit', edit_species_path(@species), class: 'btn btn-primary', role: 'button' %>
  </div>
<% end %>

<h1><%= @species.name %></h1>

<p>
  <%= @species.name %>, commonly known as <%= @species.common_names %>, is <%= @species.botanical_group.start_with?('e') ? 'an' : 'a' %> <%= link_to @species.botanical_group.humanize.downcase, species_index_path('botanical-group' => @species.botanical_group.dasherize) %> tree.
</p>
