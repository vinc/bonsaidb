<h1>Comments by <%= link_to @user.username, @user %></h1>

<ul>
  <% @comments.each do |comment| %>
    <li>
      Commented in <%= link_to comment.commentable.title, comment.commentable %>
      on <%= link_to(polymorphic_path(comment.commentable, anchor: "comment-#{comment.id}"), class: "text-reset") { time_tag comment.created_at } %>
    </li>
  <% end %>
</ul>

<div class="mt-4 d-flex justify-content-center">
  <%= paginate @comments %>
</div>
